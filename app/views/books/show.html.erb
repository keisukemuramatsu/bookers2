<main>
<%= render 'books/list', books: @book %>
  <div class="col-md-8 offset-md-1">
    <h2>Book detail</h2>
    <table class="table table-hover table-inverse">
      <tbody>
        <tr>
          <td>
            <%= image_tag('sample-author1.jpg') %>
          </td>
          <td>
            <%= @book.title %>
          </td>
          <td>
            <%= @book.body %>
          </td>
          <td>
            Edit
          </td>
          <td>
            <%= link_to "Destroy", book_path, method: :delete, data: {confirm: 'Are you sure?'} %>
          </td>
        </tr>
      </tbody>
    </table>
  </div>
</main>