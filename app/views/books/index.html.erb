<main>
  <%= render 'books/list', books: @book %>
  <div class="countainer px-5 px-sm-0">
    <div class="row">
      <div class="col-md-8 offset-md-1">
        <h2 class="mt-3">Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
    　       <tr>
    　         <td><%= attachment_image_tag current_user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %></td>
  　           <td><%= book.title %></td>
　　          <td><%= book.body %></td>
          　　  <td><%= link_to "Show", book_path(book.id) %></td>
　　          
　　          <td><%= link_to "Destroy", book_path(book.id), method: :delete, data: {confirm: 'Are you sure?'} %> </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>